<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ccs.gph.activity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App: GPH" />

    <Button
        android:text="Start G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart"

        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="41dp" />

    <Button
        android:text="Stop G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStop"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/btnStart"
        android:layout_alignStart="@+id/btnStart" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:layout_alignTop="@+id/btnStart"
        android:layout_toEndOf="@+id/btnStart"
        android:layout_marginStart="17dp">

        <TextView
            android:id="@+id/textViewLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnStart"
            android:layout_toEndOf="@+id/linearLayout"
            android:text="LOCATION" />

        <TextView
            android:id="@+id/textViewLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnStart"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/linearLayout"
            android:text="0.0" />

        <TextView
            android:id="@+id/textViewLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnStart"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/linearLayout"
            android:text="0.0" />

    </LinearLayout>

</RelativeLayout>
